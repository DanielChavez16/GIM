<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#464646"
    tools:context=".clientMenu">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cmenu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#1A1A1A"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/cmenu_img_logo"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cmenu_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/cmenu_img_logo"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/gim_logo2" />

    <ImageButton
        android:id="@+id/cmenu_btn_menu"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/cmenu_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/cmenu_btn_menu"
        android:onClick="redirVerPerfil"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img_btn_menu"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="7dp" />

    <ImageButton
        android:id="@+id/cmenu_btn_stats"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/cmenu_btn_stats"
        android:onClick="clientStats"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cmenu_btn_stats" />

    <ImageButton
        android:id="@+id/cmenu_btn_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/cmenu_btn_add"
        android:onClick="addRoutine"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cmenu_btn_add" />

</RelativeLayout>