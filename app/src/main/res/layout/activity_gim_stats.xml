<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#464646"
    tools:context=".gimStats">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/gimstats_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#1A1A1A"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageButton
        android:id="@+id/gimstats_btn_return"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/gimstats_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/gimstats_btn_return"
        android:onClick="returnMenu"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img_btn_return" />

    <TextView
        android:id="@+id/gimstats_txt_header"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/gimstats_toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/averia_sans_libre_bold"
        android:text="@string/gimstats_txt_header"
        android:textAlignment="center"
        android:textColor="#BEA055"
        android:textSize="36sp" />

</RelativeLayout>